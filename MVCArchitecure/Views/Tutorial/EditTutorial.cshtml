@model MVCArchitecure.Models.Tutorial

@{
    ViewBag.Title = "Edit Tutorial";
}

<form  method="post" class="mt-3" asp-controller="Tutorial" asp-action="EditTutorial">
   
    <input hidden asp-for="Id"/>
    
    <div class="form-group row mt-3">
        <label  asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Name" />
    </div>
    <div class="form-group row mt-3">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" placeholder="Description" />
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-controller="Tutorial" asp-action="Index" class="btn btn-primary">Cancle</a>
    </div>
</form>